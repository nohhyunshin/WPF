<Window x:Class="_0818_ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0818_ex2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="TodoList" Margin="5" TextAlignment="Center" FontSize="25" FontWeight="bold"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="입력" FontSize="18" Margin="5"/>
            <TextBox Margin="5" Text="{Binding Todo}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnImg" Content="이미지" Width="50" Height="35" Margin="10" Command="{Binding AddImgCommand}"/>
                <Button x:Name="btnAdd" Content="추가" Width="50" Height="35" Margin="10" Command="{Binding AddCommand}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="목록" Margin="5" FontSize="18"/>
            <ListBox Margin="5" ItemsSource="{Binding TodoItems}" SelectedItem="{Binding SelectedTodo, Mode=TwoWay}" Height="80">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Margin="0, 0, 5, 0"/>
                            <TextBlock Text="{Binding Text}" TextDecorations="{Binding TextDecoration}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Popup IsOpen="{Binding IsPopupOpen}" Placement="Center">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right"
                                Background="White" BorderThickness="0" Command="{Binding CloseCommand}"/>
                        <Image Source="{Binding SelectedTodo.ImagePath}" Width="300" Height="300" Stretch="Uniform"/>
                    </StackPanel>
                </Border>
            </Popup>
            <Button x:Name="btnDel" Content="삭제" Width="50" Height="35" Margin="10" Command="{Binding DelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
