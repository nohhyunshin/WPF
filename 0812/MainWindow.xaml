<Window x:Class="_0812.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0812"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <GroupBox Header="값 표시 컨트롤" Margin="10">
                <StackPanel>
                    <Label Content="슬라이더"/>
                    <Slider x:Name="slider" Minimum="0" Maximum="100" Value="50"
                            Margin="10" ValueChanged="slider_ValueChanged"/>
                    <TextBlock x:Name="lblSliderValue" Text="값 : 50" Margin="10"/>

                    <Label Content="진행률 바"/>
                    <ProgressBar x:Name="progressBar" Height="20" Value="30" Maximum="100"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="리스트 컨트롤" Margin="10">
                <StackPanel>
                    <Label Content="리스트 박스"/>
                    <ListBox x:Name="listBox" Height="100" Margin="10">
                        <ListBoxItem Content="항목1"/>
                        <ListBoxItem Content="항목2" IsSelected="True"/>
                        <ListBoxItem Content="항목3"/>
                        <ListBoxItem Content="항목4"/>
                    </ListBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="버튼 컨트롤" Margin="10">
                <StackPanel>
                    <Label Content="버튼"/>
                    <Button x:Name="btnNormal" Content="일반 버튼" Height="30" Click="btnNormal_Click"/>
                    <Button x:Name="btnDisabled" Content="비활성화 버튼" Height="30" IsEnabled="False"/>
                    <ToggleButton x:Name="btnToggle" Content="토글 버튼" Height="30"
                                  Checked="btnToggle_Checked" Unchecked="btnToggle_UnChecked"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</Window>