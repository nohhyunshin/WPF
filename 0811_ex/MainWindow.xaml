<Window x:Class="_0811_ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0811_ex"
        mc:Ignorable="d"
        Title="Ex" Height="250" Width="700">
    <Grid>
        <!-- 행(Row) 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <!-- 열(Column) 정의 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="center">
            <!-- 아이디 -->
            <StackPanel>
                <Label Content="아이디"/>
                <TextBox x:Name="txtID" Margin="5"/>

                <!-- 비밀번호 -->
                <Label Content="비밀번호"/>
                <PasswordBox x:Name="txtPSWD" Margin="5"/>
                
                <Button Content="로그인" Width="60" Height="30"
                        VerticalAlignment="center" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
