<Window x:Class="_0814_3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0814_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="학생들" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Margin="10">
                <TextBox Text="{Binding StudentName}" Width="100" Height="35" Margin="10" />
                <TextBox Text="{Binding StudentAge}" Width="100" Height="35" Margin="10" />
                <TextBox Text="{Binding StudentGrade}" Width="100" Height="35" Margin="10" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
