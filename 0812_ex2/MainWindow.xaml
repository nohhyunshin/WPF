<Window x:Class="_0812_ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0812_ex2"
        mc:Ignorable="d"
        Title="ColorSlider" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Margin="10" Grid.Row="1" CornerRadius="10" BorderThickness="2">
            <Grid  x:Name="rgbCanvas" Background="White" Margin="10"/>
        </Border>

        <StackPanel Margin="10" Grid.Row="0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="R" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                <Slider x:Name="sliderR" Width="600" VerticalAlignment="Center" Grid.Column="1"
                Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="textR" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2"
                   Text="{Binding ElementName=sliderR, Path=Value, StringFormat=F0}"/>
            </Grid>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="G" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                <Slider x:Name="sliderG" Width="600" VerticalAlignment="Center" Grid.Column="1"
                Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="textG" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2"
                   Text="{Binding ElementName=sliderG, Path=Value, StringFormat=F0}"/>
            </Grid>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="B" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                <Slider x:Name="sliderB" Width="600" VerticalAlignment="Center" Grid.Column="1"
                Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="textB" Width="80" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2"
                   Text="{Binding ElementName=sliderB, Path=Value, StringFormat=F0}"/>
            </Grid>

            <GroupBox Header="Color Type" Margin="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="10">
                    <RadioButton x:Name="optOrigin" Content="Original" Margin="15" Checked="Radio_Checked"/>
                    <RadioButton x:Name="optGray" Content="Gray Type" Margin="15"  Checked="Radio_Checked"/>
                    <RadioButton x:Name="optInvert" Content="Invert" Margin="15"  Checked="Radio_Checked"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
