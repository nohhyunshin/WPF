<Window x:Class="_0814_ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0814_ex2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10" Orientation="Vertical"
                    VerticalAlignment="center">
            <TextBlock Text="첫 번째 숫자" Margin="10"/>
            <TextBox x:Name="num1" Margin="10" Text="{Binding FirstNumber}"/>
            <TextBlock Text="두 번째 숫자" Margin="10"/>
            <TextBox x:Name="num2"  Margin="10" Text="{Binding SecondNumber}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10" Orientation="Horizontal"
                    HorizontalAlignment="center">
            <Button x:Name="btnPlus" Content="+" Width="50" Height="50" Margin="5" FontSize="20" Command="{Binding AddCommand}"/>
            <Button x:Name="btnMinus" Content="-" Width="50" Height="50" Margin="5" FontSize="20" Command="{Binding SubCommand}"/>
            <Button x:Name="btnMul" Content="*" Width="50" Height="50" Margin="5" FontSize="20" Command="{Binding MulCommand}"/>
            <Button x:Name="btnDiv" Content="/" Width="50" Height="50" Margin="5" FontSize="20" Command="{Binding DivCommand}"/>
            <Button x:Name="btnClear" Content="AC" Width="50" Height="50" Margin="5" FontSize="15" Command="{Binding ClearCommand}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="10">
            <TextBlock Text="결과 화면" Margin="5"/>
            <TextBlock x:Name="display" Text="{Binding ResultNumber}" FontSize="18" TextAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
