<Window x:Class="_0813.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0813"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto "/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnAdd" Content="학생 추가" Width="100" Height="30" Click="btnAdd_Click"/>
            <Button x:Name="btnDel" Content="선택 삭제" Width="100" Height="30" Click="btnDel_Click"/>
            <Button x:Name="btnClear" Content="전체 삭제" Width="100" Height="30" Click="btnClear_Click"/>
            
            <Button x:Name="btnImport" Content="CSV 가져오기" Width="100" Height="30" Click="btnImport_Click"/>
            <Button x:Name="btnExport" Content="CSV 내보내기" Width="100" Height="30" Click="btnExport_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="이름 : " VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtName" Width="100" Height="25" Margin="5"/>

            <TextBlock Text="나이 : " VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtAge" Width="100" Height="25" Margin="5"/>

            <TextBlock Text="점수 : " VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtScore" Width="100" Height="25" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row ="2" Orientation="Horizontal" Margin="10">
            <TextBlock Text="이름 검색 : " VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtSearch" Width="150" Height="30" Margin="5" TextChanged="txtSearch_TextChanged"/>

            <Label Content="등급"/>
            <ComboBox x:Name="cmbGradeFilter" VerticalAlignment="Center" Margin="5" SelectionChanged="cmbGradeFilter_SelectionChanged">
                <ComboBoxItem Content="전체" IsSelected="True"/>
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="D"/>
                <ComboBoxItem Content="F"/>
            </ComboBox>
        </StackPanel>
        
        <DataGrid Grid.Row="3" x:Name="myDataGrid" AutoGenerateColumns="False" CanUserAddRows="True">
            <!-- 수동으로 열 정의 -->
            <DataGrid.Columns>
                <!-- 이름 열 -->
                <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="120" IsReadOnly="False"/>
                
                <!-- 나이 열 -->
                <DataGridTextColumn Header="나이" Binding="{Binding Age}" Width="120" IsReadOnly="False"/>
                
                <!-- 점수 열 -->
                <DataGridTextColumn Header="점수" Binding="{Binding Score}" Width="120" IsReadOnly="False"/>
                
                <!-- 등급 열 (읽기 전용) -->
                <DataGridTextColumn Header="등급" Binding="{Binding Grade}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="4" Header="통계 정보" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock x:Name="total" Text="총 학생 : 0명" Margin="5"/>
                <TextBlock x:Name="avgScore" Text="평균 점수 : 0명" Margin="5"/>
                <TextBlock x:Name="passCount" Text="합격 : 0명" Margin="5"/>
                <TextBlock x:Name="failCount" Text="불합격 : 0명" Margin="5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
