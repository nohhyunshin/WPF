<Window x:Class="_0812_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0812_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 400"/>
            <ColumnDefinition Width=" *"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnImage" Content="이미지 변경" Grid.Column="1" Width="100" Height="100" Click="button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/img2.jpeg"/>
            </Button.Background>
        </Button>
        <Image x:Name="imgBox"  Grid.Column="0" Height="300" Width="300" Source="/Resources/img1.jpeg"/>
    </Grid>
</Window>
