<Window x:Class="_0814.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0814"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="그래프" FontSize="20" FontWeight="bold" HorizontalAlignment="Center" Margin="10"/>

        <GroupBox Grid.Row="1" Header="그래프 종류 선택" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnLine" Content="선형 그래프" Width="110" Height="35" Margin="5" Click="btnLine_Click"/>
                <Button x:Name="btnScatter" Content="점 그래프" Width="110" Height="35" Margin="5" Click="btnScatter_Click"/>
                <Button x:Name="btnBar" Content="막대 그래프" Width="110" Height="35" Margin="5" Click="btnBar_Click"/>
                <Button x:Name="btnMultiLine" Content="다중 선형 그래프" Width="110" Height="35" Margin="5" Click="btnMultiLine_Click"/>
                <Button x:Name="btnClear" Content="그래프 삭제" Width="110" Height="35" Margin="5" Click="btnClear_Click"/>
            </StackPanel>
        </GroupBox>
        
        <!-- 그래프 -->
        <ScottPlot:WpfPlot x:Name="MyPlot" Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
